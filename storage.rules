rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write if the user is authenticated
    // For better security, you can restrict this further to only allow
    // users to write to specific paths, but for chat images, simple auth check is standard.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}