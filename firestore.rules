rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // We fetch the user's profile to check the role.
    function isManager() {
      return request.auth != null 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
    }

    // --- Collection Rules ---

    // 1. Users Collection
    match /users/{userId} {
      // READ: 
      // Owners can read their own doc.
      // Managers can read ANY doc (needed for looking up players).
      // We also allow ANY authenticated user to read basic profile info if needed,
      // but to keep it strict, we'll stick to Owner + Manager for now.
      allow read: if isOwner(userId) || isManager();

      // WRITE: 
      // Only owner can edit, but cannot change role.
      allow write: if isOwner(userId) 
                   && (!request.resource.data.keys().hasAny(['role']) 
                       || request.resource.data.role == resource.data.role);

      // Sports Details
      match /sportsDetails/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // 2. Rosters Collection
    match /rosters/{rosterId} {
      // Everyone can read rosters (to see teams they are on)
      allow read: if request.auth != null;
      
      // Only managers can change rosters
      allow write: if isManager();
      
      // Events
      match /events/{eventId} {
        allow read: if request.auth != null;
        allow write: if isManager() 
                     || request.auth.uid in get(/databases/$(database)/documents/rosters/$(rosterId)).data.playerIDs;
      }

      // Legacy Messages (if any)
      match /messages/{messageId} {
        allow read, write: if isManager() 
                     || request.auth.uid in get(/databases/$(database)/documents/rosters/$(rosterId)).data.playerIDs;
      }
    }

    // 3. Chats Collection
    match /chats/{chatId} {
      // READ: Allow if user is in visibleTo, participants, OR is a Manager
      allow read: if request.auth != null && (
        request.auth.uid in resource.data.visibleTo || 
        request.auth.uid in resource.data.participants ||
        isManager()
      );

      // WRITE: Allow if user is in participants OR is a Manager
      // This '|| isManager()' is the critical fix for addPlayerToRoster
      allow write: if request.auth != null && (
        request.auth.uid in resource.data.participants ||
        isManager()
      );
      
      // CREATE: Allow if user includes themselves in participants
      allow create: if request.auth != null
                    && request.auth.uid in request.resource.data.participants;

      // Messages
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants ||
          isManager()
        );
      }
    }
  }
}