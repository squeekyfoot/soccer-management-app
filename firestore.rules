rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isManager() {
      return request.auth != null 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
    }

    // 1. Users Collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isManager();
      allow write: if isOwner(userId) 
                   && (!request.resource.data.keys().hasAny(['role']) 
                       || request.resource.data.role == resource.data.role);

      match /sportsDetails/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // 2. Rosters Collection
    match /rosters/{rosterId} {
      allow read: if request.auth != null;
      allow write: if isManager(); 
      
      match /events/{eventId} {
        allow read: if request.auth != null;
        allow write: if isManager() 
                     || request.auth.uid in get(/databases/$(database)/documents/rosters/$(rosterId)).data.playerIDs;
      }
    }

    // 3. NEW: Chats Collection (Flexible Messaging)
    // A user can read/write IF they are in the 'participants' array
    match /chats/{chatId} {
      allow read, write: if request.auth != null 
                         && request.auth.uid in resource.data.participants;
      
      // Allow creating a new chat if you include yourself as a participant
      allow create: if request.auth != null
                    && request.auth.uid in request.resource.data.participants;

      // Messages Sub-collection
      match /messages/{messageId} {
        // We check the PARENT document (the chat) to see if you are a participant
        allow read, write: if request.auth != null 
                           && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}