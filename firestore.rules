rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    // Check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Check if the user has the 'manager' role in their profile
    function isManager() {
      return request.auth != null 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
    }

    // --- Collection Rules ---

    // 1. Users Collection
    match /users/{userId} {
      // READ: Owners can see themselves. Managers can see everyone (to add them to teams).
      allow read: if isOwner(userId) || isManager();

      // WRITE: Only the owner can edit their profile.
      // AND they cannot change their 'role'.
      allow write: if isOwner(userId) 
                   && (!request.resource.data.keys().hasAny(['role']) 
                       || request.resource.data.role == resource.data.role);

      // Sports Details Sub-collection (Keep strictly private for now)
      match /sportsDetails/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // 2. Rosters Collection
    match /rosters/{rosterId} {
      // Managers can do everything here (create, update, delete)
      // Regular players can only READ rosters (so they can see their team)
      allow read: if request.auth != null;
      allow write: if isManager();
    }
  }
}