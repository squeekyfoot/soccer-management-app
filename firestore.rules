rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    function isManager() {
      return request.auth != null 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
    }

    // 1. Users Collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if isOwner(userId) && request.resource.data.role == 'player';
      allow update: if isOwner(userId) 
                   && (!request.resource.data.keys().hasAny(['role']) 
                       || request.resource.data.role == resource.data.role);
      match /sportsDetails/{document=**} {
        allow read: if request.auth != null;
        allow write: if isOwner(userId);
      }
    }

    // 2. Rosters Collection
    match /rosters/{rosterId} {
      allow read: if request.auth != null;
      allow write: if isManager();
      
      match /events/{eventId} {
        allow read: if request.auth != null;
        allow write: if isManager() 
                     ||
        request.auth.uid in get(/databases/$(database)/documents/rosters/$(rosterId)).data.playerIDs;
      }

      match /messages/{messageId} {
        allow read, write: if isManager() 
                     ||
        request.auth.uid in get(/databases/$(database)/documents/rosters/$(rosterId)).data.playerIDs;
      }
    }

    // 3. Chats Collection
    match /chats/{chatId} {
      allow read: if request.auth != null && (
        request.auth.uid in resource.data.visibleTo || 
        request.auth.uid in resource.data.participants ||
        isManager()
      );
      allow update: if request.auth != null && (
        request.auth.uid in resource.data.participants ||
        isManager()
      );
      allow create: if request.auth != null
                    && request.auth.uid in request.resource.data.participants;
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants ||
          isManager()
        );
      }
    }

    // 4. Groups Collection
    match /groups/{groupId} {
      allow create: if request.auth != null;
      // FIX: Allow Managers to read/update groups (fixes "Missing permissions" error)
      allow read: if (request.auth != null && request.auth.uid in resource.data.members) ||
      isManager();
      allow update: if (request.auth != null && request.auth.uid in resource.data.members) || isManager();
      match /posts/{postId} {
        allow read, write: if (request.auth != null && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members) ||
        isManager();
      }
    }

    // 5. Roster Requests
    match /rosterRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        resource.data.managerId == request.auth.uid
      );
    }
    
    // 6. Feedback Collection (NEW RULE ADDED FOR FEEDBACK FEATURE)
    match /feedback/{feedbackId} {
      allow read: if request.auth != null;
      // Allow any authenticated user to create, preventing them from setting votes/voters initially
      allow create: if request.auth != null
                    && !request.resource.data.keys().hasAny(['votes', 'voters']);
      // Allow updates (for voting) only if authenticated
      allow update: if request.auth != null;
    }
  }
}