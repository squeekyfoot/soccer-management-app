rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ... (Helper functions remain the same) ...
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    function isManager() {
      return request.auth != null 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
    }

    // 1. Users Collection
    match /users/{userId} {
      // READ: Allow ANY authenticated user to read user profiles.
      // This enables "User Search" for players to find each other.
      allow read: if request.auth != null;

      // WRITE: Only the owner can edit, AND they cannot change their 'role'
      allow write: if isOwner(userId) 
                   && (!request.resource.data.keys().hasAny(['role']) 
                       || request.resource.data.role == resource.data.role);

      match /sportsDetails/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // ... (Keep Rosters, Chats, Groups rules exactly as they were) ...
    
    // 2. Rosters Collection
    match /rosters/{rosterId} {
      allow read: if request.auth != null;
      allow write: if isManager(); 
      
      match /events/{eventId} {
        allow read: if request.auth != null;
        allow write: if isManager() 
                     || request.auth.uid in get(/databases/$(database)/documents/rosters/$(rosterId)).data.playerIDs;
      }

      match /messages/{messageId} {
        allow read, write: if isManager() 
                     || request.auth.uid in get(/databases/$(database)/documents/rosters/$(rosterId)).data.playerIDs;
      }
    }

    // 3. Chats Collection
    match /chats/{chatId} {
      allow read: if request.auth != null && (
        request.auth.uid in resource.data.visibleTo || 
        request.auth.uid in resource.data.participants ||
        isManager()
      );

      allow write: if request.auth != null && (
        request.auth.uid in resource.data.participants ||
        isManager()
      );
      
      allow create: if request.auth != null
                    && request.auth.uid in request.resource.data.participants;

      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants ||
          isManager()
        );
      }
    }

    // 4. Groups Collection
    match /groups/{groupId} {
      allow create: if request.auth != null;
      
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      
      allow update: if request.auth != null && request.auth.uid in resource.data.members;

      match /posts/{postId} {
        allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }
    }
  }
}