rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isManager() {
      return request.auth != null 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
    }

    // SUPER USER: Check if the user has the 'developer' role
    function isDeveloper() {
      return request.auth != null 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'developer';
    }

    // 1. Users Collection
    match /users/{userId} {
      // Allow read if Auth OR if it's a specific Free Agent query (future proofing)
      allow read: if request.auth != null || 
                  (resource.data.soccerProfile.isFreeAgent == true);

      // Developers can create/update any user profile if needed
      allow create: if (isOwner(userId) && request.resource.data.role == 'player') ||
                       isDeveloper();
      
      // Allow updates if Owner (restricted) OR if Developer (unrestricted)
      allow update: if isDeveloper() ||
                    (
                    isOwner(userId) 
                   && (!request.resource.data.keys().hasAny(['role']) 
                       || request.resource.data.role == resource.data.role)
                   );
                   
      match /sportsDetails/{document=**} {
        allow read: if request.auth != null;
        allow write: if isOwner(userId) || isDeveloper();
      }
    }

    // 2. Rosters Collection
    match /rosters/{rosterId} {
      allow read: if request.auth != null;
      allow write: if isManager() || isDeveloper();
      
      match /events/{eventId} {
        allow read: if request.auth != null;
        allow write: if isManager() || isDeveloper()
                     ||
                     request.auth.uid in get(/databases/$(database)/documents/rosters/$(rosterId)).data.playerIDs;
      }

      match /messages/{messageId} {
        allow read, write: if isManager() ||
                     isDeveloper()
                     ||
                     request.auth.uid in get(/databases/$(database)/documents/rosters/$(rosterId)).data.playerIDs;
      }
    }

    // 3. Chats Collection
    match /chats/{chatId} {
      allow read: if request.auth != null && (
        request.auth.uid in resource.data.visibleTo || 
        request.auth.uid in resource.data.participants ||
        isManager() || isDeveloper()
      );
      allow update: if request.auth != null && (
        request.auth.uid in resource.data.participants ||
        isManager() || isDeveloper()
      );
      // Developers can create chats arbitrarily if needed
      allow create: if request.auth != null
                    && (request.auth.uid in request.resource.data.participants || isDeveloper());
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants ||
          isManager() || isDeveloper()
        );
      }
    }

    // 4. Groups Collection
    match /groups/{groupId} {
      allow create: if request.auth != null;
      allow read: if (request.auth != null && request.auth.uid in resource.data.members) || isManager() || isDeveloper();
      allow update: if (request.auth != null && request.auth.uid in resource.data.members) || isManager() || isDeveloper();
      match /posts/{postId} {
        allow read, write: if (request.auth != null && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members) ||
                              isManager() || isDeveloper();
      }
    }

    // 5. Roster Requests (Invites & Joins)
    match /rosterRequests/{requestId} {
      // Allow creation if the requester marks themselves as the sender (either User or Manager)
      allow create: if request.auth != null && 
                    (request.resource.data.userId == request.auth.uid || request.resource.data.managerId == request.auth.uid);
      
      allow read, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        resource.data.managerId == request.auth.uid ||
        isDeveloper()
      );
      
      // Allow updates (Accept/Reject)
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        resource.data.managerId == request.auth.uid ||
        isDeveloper()
      );
    }
    
    // 6. Notifications (New)
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if request.auth != null && resource.data.recipientId == request.auth.uid;
      
      // Users can dismiss (update) their own notifications
      allow update: if request.auth != null && resource.data.recipientId == request.auth.uid;
      
      // Users can delete their own notifications
      allow delete: if request.auth != null && resource.data.recipientId == request.auth.uid;
      
      // Allow creation if the sender is the auth user (e.g. Referral or Response)
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
    }
    
    // 7. Feedback Collection
    match /feedback/{feedbackId} {
      allow read: if request.auth != null;
      // FIX: Allow creation ONLY if votes starts at 0 and voters is empty
      // This prevents rigging but allows fields to exist for orderBy queries
      allow create: if request.auth != null
                    && request.resource.data.votes == 0
                    && request.resource.data.voters.size() == 0;
      // Update Logic:
      // 1. Developers can update anything.
      // 2. Regular users can ONLY update 'votes' and 'voters' (Toggle vote).
      allow update: if isDeveloper() 
                    ||
                       (request.auth != null 
                        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['votes', 'voters']));
      allow delete: if isDeveloper();
    }

    // 8. Leagues Collection
    match /leagues/{leagueId} {
      // Anyone logged in can read leagues (to see them in dropdowns/details)
      allow read: if request.auth != null;
      // Only Managers and Developers can create or edit leagues
      allow write: if isManager() ||
                      isDeveloper();
    }
  }
}