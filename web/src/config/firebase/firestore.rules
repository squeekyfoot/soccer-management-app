rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isManager() {
      return request.auth != null 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
    }

    function isDeveloper() {
      return request.auth != null 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'developer';
    }

    // 1. Users Collection
    match /users/{userId} {
      allow read: if request.auth != null || (resource.data.soccerProfile.isFreeAgent == true);

      allow create: if (isOwner(userId) && request.resource.data.role == 'player') ||
                       isDeveloper();
      
      allow update: if isDeveloper() ||
                   (
                    isOwner(userId) 
                   && (!request.resource.data.keys().hasAny(['role']) 
                       || request.resource.data.role == resource.data.role)
                   );
      match /sportsDetails/{document=**} {
        allow read: if request.auth != null;
        allow write: if isOwner(userId) || isDeveloper();
      }
    }

    // 2. Rosters Collection
    match /rosters/{rosterId} {
      allow read: if request.auth != null;
      allow write: if isManager() || isDeveloper() || 
                   (
                     request.auth != null && 
                     request.method == 'update' &&
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['playerIDs', 'players'])
                   );
      
      match /events/{eventId} {
        allow read: if request.auth != null;
        allow write: if isManager() || isDeveloper()
                     || request.auth.uid in get(/databases/$(database)/documents/rosters/$(rosterId)).data.playerIDs;
      }

      match /messages/{messageId} {
        allow read, write: if isManager() || isDeveloper()
                     || request.auth.uid in get(/databases/$(database)/documents/rosters/$(rosterId)).data.playerIDs;
      }
    }

    // 3. Chats Collection
    match /chats/{chatId} {
      allow read: if request.auth != null && (
        request.auth.uid in resource.data.visibleTo || 
        request.auth.uid in resource.data.participants ||
        (resource.data.rosterId != null && request.auth.uid in get(/databases/$(database)/documents/rosters/$(resource.data.rosterId)).data.playerIDs) ||
        isManager() || isDeveloper()
      );
      allow update: if request.auth != null && (
        request.auth.uid in resource.data.participants ||
        request.auth.uid in request.resource.data.participants ||
        isManager() || isDeveloper()
      );
      allow create: if request.auth != null
                    && (request.auth.uid in request.resource.data.participants || isDeveloper());
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants ||
          (get(/databases/$(database)/documents/chats/$(chatId)).data.rosterId != null && 
           request.auth.uid in get(/databases/$(database)/documents/rosters/$(get(/databases/$(database)/documents/chats/$(chatId)).data.rosterId)).data.playerIDs) ||
          isManager() || isDeveloper()
        );
      }
    }

    // 4. Groups Collection
    match /groups/{groupId} {
      allow create: if request.auth != null;
      allow read: if (request.auth != null && request.auth.uid in resource.data.members) || isManager() || isDeveloper();
      allow update: if (request.auth != null && request.auth.uid in resource.data.members) || isManager() || isDeveloper();
      match /posts/{postId} {
        allow read, write: if (request.auth != null && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members) || isManager() || isDeveloper();
      }
    }

    // 5. Roster Requests
    match /rosterRequests/{requestId} {
      allow create: if request.auth != null && 
                    (request.resource.data.userId == request.auth.uid || request.resource.data.managerId == request.auth.uid);
      allow read, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        resource.data.managerId == request.auth.uid ||
        isDeveloper()
      );
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        resource.data.managerId == request.auth.uid ||
        isDeveloper()
      );
    }
    
    // 6. Notifications
    match /notifications/{notificationId} {
      allow read: if request.auth != null && resource.data.recipientId == request.auth.uid;
      allow update: if request.auth != null && resource.data.recipientId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.recipientId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
    }
    
    // 7. Feedback
    match /feedback/{feedbackId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.votes == 0
                    && request.resource.data.voters.size() == 0;
      allow update: if isDeveloper() 
                    || (request.auth != null 
                        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['votes', 'voters']));
      allow delete: if isDeveloper();
    }

    // 8. Leagues
    match /leagues/{leagueId} {
      allow read: if request.auth != null;
      allow write: if isManager() || isDeveloper();
    }

    // 9. Events (Top Level)
    match /events/{eventId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.authorId ||
        request.auth.uid in resource.data.invitees ||
        (resource.data.type == 'game' && isManager()) ||
        isDeveloper()
      );

      allow create: if request.auth != null;

      allow update: if request.auth != null && (
        // Case A: Social Event Author can edit everything
        (resource.data.type == 'social' && resource.data.authorId == request.auth.uid) ||
        // Case B: Managers can edit Game events
        (resource.data.type == 'game' && isManager()) ||
        // Case C: Invitees can ONLY update the 'responses' map (RSVP)
        (
           request.auth.uid in resource.data.invitees &&
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['responses'])
        ) ||
        // Case D: Invitees can update 'invitees' list IF 'allowInviteOthers' is ON (Social)
        (
           resource.data.type == 'social' && 
           resource.data.allowInviteOthers == true &&
           request.auth.uid in resource.data.invitees &&
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['invitees'])
        ) ||
        isDeveloper()
      );

      allow delete: if request.auth != null && (
         (resource.data.type == 'social' && resource.data.authorId == request.auth.uid) ||
         (resource.data.type == 'game' && isManager()) ||
         isDeveloper()
      );
    }

    // 10. Action Items
    match /actionItems/{itemId} {
      allow read, update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      allow create: if request.auth != null; 
    }

  }
}